<% if flash[:errors] %>
    <ul style="color: red;">
        <% flash[:errors].each do |error| %>
            <li> <%= error %>
        <% end %>
    </ul>
<% end %>


<%= form_for @student do |f| %>
    <%= f.label :name %>
    <%= f.text_field :name %>
    <%= f.label :major %>
    <%= f.text_field :major %>
    <%= f.label :age %>
    <%= f.text_field :age %>
    <%= f.collection_select :instructor_id, @instructors, :id, :name %>
    <%= f.submit %>
<% end %>